    <test name="Verify Login with valid input">

        <classes>
            <class name="tests.LoginTest">
                <methods>
                    <include name="verifyLoginWithValidInput"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Verify Login With Invalid Credentials">

        <classes>
            <class name="tests.LoginTest">
                <methods>
                    <include name="verifyLoginWithInvalidCredentials"/>
                </methods>
            </class>
        </classes>
    </test>

